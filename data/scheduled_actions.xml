<odoo>
    <data noupdate="1">
        <record id="ir_cron_update_academic_year_status" model="ir.cron">
            <field name="name">Update Academic Year Status</field>
            <field name="model_id" ref="model_schoolmanages_academic_year"/>
            <field name="state">code</field>
            <field name="code">model.update_academic_year_status()</field>
            <field name="active" eval="True"/>
