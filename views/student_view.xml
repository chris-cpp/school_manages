<odoo>
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">schoolmanages.student</field>
        <field name="arch" type="xml">
            <form string="Studentet">
                <header>
                    <field name="status" widget="statusbar" nolabel="1"
                           statusbar_visible="regjistruar,ne progres,kalues,ngeles,diplomuar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="nr_amzes"/>
                            <field name="parent_id"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="birth_date"/>
                        </group>
                        <group>
                            <field name="address"/>
                            <field name="gender"/>
                            <field name="country"/>
                            <field name="status"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.tree</field>
        <field name="model">schoolmanages.student</field>
        <field name="arch" type="xml">
            <tree string="Studentet" decoration-success="status == 'diplomuar'"
                  decoration-info="status == 'kalues'" decoration-danger="status == 'ngeles'"
                  decoration-warning="status == 'regjistruar'">
                <field name="name" optional="show"/>
                <field name="nr_amzes" optional="show"/>
                <field name="parent_id" optional="show"/>
                <field name="phone" optional="show"/>
                <field name="email" optional="show"/>
                <field name="gender" optional="show"/>
                <field name="country" optional="show"/>
                <field name="activity_ids" widget="list_activity" optional="show"/>
                <field name="birth_date" optional="show"/>
                <field name="address" optional="show"/>
                <field name="status" optional="show"
                       decoration-success="status == 'diplomuar'"
                       decoration-info="status == 'kalues'"
                       decoration-danger="status == 'ngeles'"
                       decoration-warning="status == 'regjistruar'"
                       widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="student_search_view" model="ir.ui.view">
        <field name="name">schoolmanages.student.search</field>
        <field name="model">schoolmanages.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="birth_date"/>
                <field name="gender"/>
                <field name="country"/>
                <searchpanel>
                    <field name="status" icon="fa-list" select="multi" enable_counters="1"/>
                    <field name="gender" icon="fa-users" select="multi" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="student_kanban_view" model="ir.ui.view">
        <field name="name">schoolmanages.student.kanban</field>
        <field name="model">schoolmanages.student</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="nr_amzes"/>
                <field name="birth_date"/>
                <field name="address"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <t t-if="record.nr_amzes.value">
                                <hr class="mt8 mb8"/>
                                <b>Nr Amzes:</b>
                                <field name="nr_amzes"/>
                            </t>
                            <div>
                                <b>Birth Date:</b>
                                <field name="birth_date"/>
                            </div>
                            <div>
                                <b>Email:</b>
                                <field name="email"/>
                            </div>
                            <div>
                                <b>Status:</b>
                                <field name="status"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Studentet</field>
        <field name="res_model">schoolmanages.student</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <menuitem id="menu_school" name="School"/>
    <menuitem id="submenu_student" name="Studentet" parent="menu_school" action="action_student" sequence="1"/>
</odoo>
